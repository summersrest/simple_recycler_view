<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SimpleRecyclerView">
        <!--RecyclerView的类型-->
        <attr name="rv_type" format="integer">
            <enum name="list" value="0"/>
            <enum name="grid" value="1"/>
            <enum name="stagger" value="2"/>
        </attr>

        <!--RecyclerView的方向-->
        <attr name="rv_orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <!--网格或瀑布流的交叉轴行列数-->
        <attr name="rv_cross_axis" format="integer"/>

        <!--分割线高度/宽度-->
        <attr name="rv_divider_size" format="dimension"/>
        <!--分割线颜色-->
        <attr name="rv_divider_color" format="color"/>
        <!--分割线图片-->
        <attr name="rv_divider_drawable" format="reference"/>

        <!--最后一条是否显示分割线-->
        <attr name="rv_divider_last_show" format="boolean"/>

        <!--是否开启默认动画-->
        <attr name="rv_default_animator_open" format="boolean"/>
    </declare-styleable>

</resources>